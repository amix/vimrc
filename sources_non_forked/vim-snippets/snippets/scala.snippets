# Scala lang
#if
snippet if
	if(${1:obj}) {
		${2}
	}
#if not
snippet ifn
	if(!${1:obj}) {
		${2}
	}
#if-else
snippet ife
	if(${1:obj}) {
		${2}
	} else {
		${3}
	}
#if-else-if
snippet ifelif
	if(${1:obj}) {
		${2}
	} else if(${3:obj}) {
		${4}
	}
snippet eif
	else if(${3:obj}) {
		${4}
	}
#while loop
snippet wh
	while (${1:obj}) {
		${2}
	}
#for loop(classic)
snippet for
	for (${1:item} <- ${2:obj}) {
		${3}
	}
#for loop(indexed)
snippet fori
	for (${1:i} <- ${2:0} to ${3:obj}.length) {
		${4}
	}
#exceptions
snippet try
	try {
		${1}
	} catch {
		case e: FileNotFoundException => ${2}
		case e: IOException => ${3}
	} finally {
		${4}
	}
#match
snippet match
	${1: obj} match {
		case ${2:e} => ${3}
		case _ => ${4}
	}
#case
snippet case
	case ${1:value} => ${2}
