#recursion
snippet rec
	def ${1:name}(${2:arg}) =
		if($2) $2
		else $1($2)
#curried method
snippet crdef
	def ${1:name}(${2:arg})(${3:arg}) = ${4:}
#main method
#check validity of T
snippet main
	def main(args: Array[String]):${1:T} = ${2:}
