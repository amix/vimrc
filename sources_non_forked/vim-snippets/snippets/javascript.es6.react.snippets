	class ${1:MyComponent} extends Component {
		render() {
			return (
				${0:<div></div>}
			)
		}
	}

# React constructor
snippet rcon
	constructor(props) {
		super(props)

		this.state = {
			${1}: ${0},
		}
	}

# Proptypes for React Class
snippet rcpt
	static propTypes = {
		${1}: PropTypes.${0},
	}

# Default props for React Class
snippet rcdp
	static defaultProps = {
		${1}: ${0},
	}

