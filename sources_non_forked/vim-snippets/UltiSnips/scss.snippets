extends css

priority -50

snippet imp "@import '...';" b
@import '${1:file}';
endsnippet

snippet inc "@include mixin(...);" b
@include ${1:mixin}(${2});
endsnippet

snippet ext "@extend %placeholder;" b
@extend %${1:%placeholder};
endsnippet

snippet mixin "@mixin (...) { ... }" b
@mixin ${1:name}(${2}) {
	${VISUAL}$0
}
endsnippet

snippet fun "@function (...) { ... }" b
@function ${1:name}(${2}) {
	${VISUAL}$0
}
endsnippet

snippet if "@if (...) { ... }" b
@if ${1:condition} {
	${VISUAL}$0
}
endsnippet

snippet else "@else { ... }" b
@else ${1:condition} {
	${VISUAL}$0
}
endsnippet

snippet for "@for loop" b
@for ${1:$i} from ${2:1} through ${3:3} {
	${VISUAL}$0
}
endsnippet

snippet each "@each loop" b
@each ${1:$item} in ${2:item, item, item} {
	${VISUAL}$0
}
endsnippet

snippet while "@while loop" b
@while ${1:$i} ${2:>} ${3:0} {
	${VISUAL}$0
}
endsnippet
